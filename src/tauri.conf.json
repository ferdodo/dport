{
	"package":{
		"productName": "dport"
	},
	"build": {
		"distDir": "../dist"
	},
	"tauri":{
		"allowlist": {
			"all": false,
			"shell": {
				"execute": true
			},
			"window": {
				"close": true,
				"minimize": true,
				"startDragging": true
			}
		},
		"windows": [
			{
				"title": "dport",
				"width": __DPORT_WINDOW_WIDTH__,
				"height": __DPORT_WINDOW_HEIGHT__,
				"resizable": true,
				"fullscreen": false,
				"decorations": false
			}
		],
		"bundle": {
			"identifier" : "io.github.ferdodo.dport",
			"targets": [
				"deb",
				"msi"
			]
		}
	}
}
