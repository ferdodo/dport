{
	"package":{
		"productName": "dport"
	},
	"build": {
		"distDir": "../dist"
	},
	"tauri":{
		"allowlist": {
			"all": false,
			"shell": {
				"execute": true
			}
		},
		"windows": [
			{
				"title": "dport",
				"width": 1000,
				"height": 300,
				"resizable": true,
				"fullscreen": false,
				"decorations": false
			}
		],
		"bundle": {
			"identifier" : "io.github.ferdodo.dport",
			"targets": [
				"appimage",
				"deb",
				"msi"
			]
		}
	}
}
